@page
@model Tasker.Pages.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>All Tasks</h1>

<table>
    <tr>
        <th>"Id"</th>
        <th>"Title"</th>
        <th>"Description"</th>
        <th>"Priority"</th>
    </tr>

    @foreach (var task in Model.Tasks)
    {
        <tr>
            <td>@task.Id</td>
            <td>@task.Title</td>
            <td>@task.Description</td>
            <td>@task.Priority</td>
        </tr>
    }
</table>
